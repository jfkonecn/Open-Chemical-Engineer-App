<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CheApp.View.CategoryPage"
             Title="{Binding Name}">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" Margin="20,20,20,0">
            <SearchBar x:Name="SearchBar" Text="{Binding SearchKeyword}" SearchCommand="{Binding Search}" />
            <ListView ItemsSource="{Binding SearchResults}"
                              GroupDisplayBinding="{Binding Name}"
                              IsGroupingEnabled="True"
                              >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding FullName}"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>